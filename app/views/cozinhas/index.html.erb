<h1>Cozinhas</h1>

<table>
  <thead>
    <tr>
      <th>Pedido</th>
      <th>Id pedido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cozinhas.each do |cozinha| %>
      <tr>
        <td><%= cozinha.pedido %></td>
        <td><%= cozinha.id_pedido %></td>
        <td><%= link_to 'Show', cozinha %></td>
        <td><%= link_to 'Edit', edit_cozinha_path(cozinha) %></td>
        <td><%= link_to 'Destroy', cozinha, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

